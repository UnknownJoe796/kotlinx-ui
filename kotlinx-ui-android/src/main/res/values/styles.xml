<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CrossPlatformThemeDefaultHeaderStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CrossPlatformThemeDefaultSubheaderStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CrossPlatformThemeDefaultBodyStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CrossPlatformTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="headerStyle">
            @style/CrossPlatformThemeDefaultHeaderStyle
        </item>
        <item name="subheaderStyle">
            @style/CrossPlatformThemeDefaultSubheaderStyle
        </item>
        <item name="bodyStyle">
            @style/CrossPlatformThemeDefaultBodyStyle
        </item>
    </style>
</resources>